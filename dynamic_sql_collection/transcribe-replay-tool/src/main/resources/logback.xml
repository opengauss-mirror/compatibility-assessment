<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FAIL_SQL" class="ch.qos.logback.core.FileAppender">
        <file>fail_sql.log</file>
        <encoder>
            <pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="SLOW_SQL" class="ch.qos.logback.core.FileAppender">
        <file>slow_sql.log</file>
        <encoder>
            <pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="TOP_SLOW_SQL" class="ch.qos.logback.core.FileAppender">
        <file>topn_slow_sql.log</file>
        <encoder>
            <pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="DATA_DIFF" class="ch.qos.logback.core.FileAppender">
        <file>data_diff.log</file>
        <encoder>
            <pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="SUMMARY" class="ch.qos.logback.core.FileAppender">
        <file>summary.log</file>
        <encoder>
            <pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.opengauss.tools.replay.FailSqlLogger" level="ERROR" additivity="false">
        <appender-ref ref="FAIL_SQL"/>
    </logger>

    <logger name="org.opengauss.tools.replay.SlowSqlLogger" level="INFO" additivity="false">
        <appender-ref ref="SLOW_SQL"/>
    </logger>

    <logger name="org.opengauss.tools.replay.TopSlowSqlLogger" level="INFO" additivity="false">
        <appender-ref ref="TOP_SLOW_SQL"/>
    </logger>

    <logger name="org.opengauss.tools.replay.DataDiffLogger" level="ERROR" additivity="false">
        <appender-ref ref="DATA_DIFF"/>
    </logger>

    <logger name="org.opengauss.tools.replay.Summary" level="INFO" additivity="false">
        <appender-ref ref="SUMMARY"/>
    </logger>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>